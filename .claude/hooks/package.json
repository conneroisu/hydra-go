{
  "name": "claude-hooks",
  "version": "1.0.0",
  "description": "TypeScript hook system for Claude Code with comprehensive logging and security",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "lint": "./node_modules/.bin/eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "bun x tsc --noEmit",
    "check:all": "bun run typecheck && bun run lint && bun run format:check",
    "fix:all": "bun run format && bun run lint:fix",
    "dev": "bun --hot index.ts",
    "build": "bun build index.ts --outdir ./dist --target bun",
    "setup-hooks": "./setup-git-hooks.sh",
    "pre-commit": "./pre-commit.sh",
    "clean": "rm -rf dist node_modules"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "8.57.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-security": "^2.1.0",
    "eslint-plugin-unicorn": "^51.0.0",
    "prettier": "^3.2.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "keywords": [
    "claude",
    "hooks",
    "typescript",
    "bun",
    "security",
    "logging"
  ]
}
